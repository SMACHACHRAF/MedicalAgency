{% extends 'doctornavbar.html.twig' %}
{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block title %}Write Report{% endblock %}

{% block test %}
    <div class="sidebar">


        <div class="scrollbar-inner sidebar-wrapper">
            <div class="user">
                <div class="photo">
                    <img src="{{ asset('icons/doctor.png') }}" alt="Symfony" />
                </div>
                <div class="info">
                    <a class="" data-toggle="collapse" href="#collapseExample" aria-expanded="true">
                        <span>
                        {{username}}
                        <span class="user-level">Doctor</span>
                        </span>
                    </a>
                    <div class="clearfix"></div>
                </div>
            </div>
            <ul class="nav ">
                <li class="nav-item">
                    <a href="#dash" data-toggle="collapse" aria-expanded="false">
                        <i class="la la-dashboard"></i>
                        <p>Dashboard</p>
                        <span class="caret"></span>

                    </a>
                </li>
                <ul class="collapse navigation-submenu" id="dash">
                    <li>
                        <a class="breadcrumb-item active" href="{{ path('stat_doc') }}" >Stats</a>

                    </li>
                    <br>

                </ul>
                <li class="nav-item active ">
                    <a href="#req_man" data-toggle="collapse" aria-expanded="false">
                        <svg class="bi bi-folder-check" width="2.8em" height="2em" viewBox="0 0 24 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path d="M4 1h5v1H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V6h1v7a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2z"/>
                            <path d="M9 4.5V1l5 5h-3.5A1.5 1.5 0 0 1 9 4.5z"/>
                            <path fill-rule="evenodd" d="M5 11.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1h-2a.5.5 0 0 1-.5-.5zm0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5zm0-2a.5.5 0 0 1 .5-.5h5a.5.5 0 0 1 0 1h-5a.5.5 0 0 1-.5-.5z"/>
                        </svg>
                        <p>Reports</p>
                        <span class="caret"></span>
                    </a>
                </li>
                <ul class="collapse navigation-submenu" id="req_man">
                    <li>
                        <a  class="breadcrumb-item active" href="{{ path('pending_reports') }}" >Pending Reports</a>
                    </li>
                    <br>
                    <li>
                        <a  href="{{ path('history_reports') }}" >Completed Reports</a>
                    </li>
                    <br>

                </ul>

            </ul>
        </div>
    </div>
    <div class="main-panel">
        <div class="content">
            <div class="container-fluid">
                <h3>Report of Patient {{ patient.Name }} </h3>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Age</th>
                            <th>Sexe</th>
                            <th>Country</th>
                            <th>Phone</th>
                            <th>Email</th>
                            <th>Medical File</th>
                        </tr>
                        </thead>
                        <tbody>

                        <td>{{ patient.id }}</td>
                        <td>{{ patient.Name }}</td>
                        <td>{{ patient.Age }}</td>
                        <td>{{ patient.Sexe }}</td>
                        <td>{{ patient.country }}</td>
                        <td>{{ patient.Phone }}</td>
                        <td>{{ patient.Email}}</td>
                        <td>
                            <p>
                                </a>

                            </p>

                        </td>
                        </tbody>
                    </table>
                </div>
                <div class="container">
                    {{ form_start(form) }}
                    <div class="row">
                        <div class="col-md-12">{{ form_row(form.report) }}</div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">{{ form_row(form.save) }}</div>
                        {{ form_end(form) }}
                        <br>
                        <div class="col-md-6"><a href="{{ path('report_done', {'id': patient.id}) }}" class="btn btn-primary btn-ls   active" role="button" aria-pressed="true" >Complete Report </a></div>
                    </div>
                </div>

            </div>
        </div>
    </div>

{% endblock %}

