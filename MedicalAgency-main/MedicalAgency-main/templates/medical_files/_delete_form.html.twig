<form method="post" action="{{ path('medical_files_delete', {'id': medical_file.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ medical_file.id) }}">
    <button class="btn">Delete</button>
</form>
