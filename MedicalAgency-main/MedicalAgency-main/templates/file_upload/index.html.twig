{% form_theme UploadForm 'bootstrap_3_layout.html.twig' %}
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
      integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

{% block css %}
    <style>
        .site-footer {
            background-color: #26272b;
            padding: 45px 0 20px;
            font-size: 15px;
            line-height: 24px;
            color: #737373;
        }

    </style>
{% endblock %}


{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="{{ path('homepage') }}"><img
                    src="{{ asset('medicalcenter/assets/img/logo/logo.png') }}" alt="image"></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">

                <li class="nav-item">
                    <a class="nav-link" href="{{ path('homepage') }}">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('about') }}">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('department') }}">Department</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('contact') }}">Contact</a>
                </li>


            </ul>
            <form class="form-inline my-2 my-lg-0">
                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
            </form>
        </div>
    </nav>
 {{ form_start(UploadForm) }}

    <div class="container mt-4">

        <h1>Patient Folder Informations</h1>

        <div class="row">
            <div class="col-md-5">{{ form_row(UploadForm.weight, {'attr': {'min': '1' , 'max' : '116'}}) }}</div>
            <div class="col-md-5"> {{ form_row(UploadForm.size, {'attr': {'min': '5', 'max' : '300'}}) }}</div>
        </div>
        <div class="row">
            <div class="col-md-5">{{ form_row(UploadForm.IsAlcohloic) }}</div>
            <div class="col-md-5">  {{ form_row(UploadForm.IsSmoking) }}</div>
        </div>
        <div class="row">
            <div class="col-md-5">{{ form_row(UploadForm.qtealcohol) }}</div>
            <div class="col-md-5">  {{ form_row(UploadForm.qte_smoking) }}</div>
        </div>


        <div class="row">
            <div class="col-md-5">
                <h3>Operations</h3>
                <ul id="users-fields-list"
                    data-prototype="{{ form_widget(UploadForm.PrevOper.vars.prototype, {attr: {class: 'wrap-input100 input100-select bg1'} })|e }}"
                    data-widget-tags="{{ '<li></li>'|e }}"
                    data-widget-counter="{{ UploadForm.children|length }}">
                    {% for emailField in UploadForm.PrevOper %}
                        <li>
                            {{ form_errors(emailField) }}
                            {{ form_widget(emailField, {attr: {class: 'wrap-input100 input100-select bg1'} }) }}
                        </li>
                    {% endfor %}
                </ul>
                <button type="button"
                        class="add-another-collection-Widget btn btn-outline-dark "
                        data-list-selector="#emails-fields-list">Add Operation
                </button>
            </div>

            <div class="col-md-4">
                <h3>Treatments</h3>
                <ul id="users-diseases"
                    data-prototype="{{ form_widget(UploadForm.CurrentDisease.vars.prototype, {attr: {class: 'wrap-input100 input100-select bg1'} })|e }}"
                    data-widget-tags="{{ '<li></li>'|e }}"
                    data-widget-counter="{{ UploadForm.children|length }}">
                    {% for emailField in UploadForm.CurrentDisease %}
                        {{ form_errors(emailField) }}
                        {{ form_widget(emailField, {attr: {class: 'wrap-input100 input100-select bg1'} }) }}

                    {% endfor %}
                </ul>
                <button type="button"
                        class="add-another-collection-disease btn btn-outline-dark"
                        data-list-selector="#users-diseases">Add Treatments
                </button>
            </div>

            <div class="col-md-3">
                <h3>Medications</h3>

                <ul id="users-treatment"
                    data-prototype="{{ form_widget(UploadForm.treatments.vars.prototype, {attr: {class: 'wrap-input100 input100-select bg1'} })|e }}"
                    data-widget-tags="{{ '<li></li>'|e }}"
                    data-widget-counter="{{ UploadForm.children|length }}">
                    {% for emailField in UploadForm.treatments %}
                        {{ form_errors(emailField) }}
                        {{ form_widget(emailField, {attr: {class: 'wrap-input100 input100-select bg1'} }) }}

                    {% endfor %}
                    <button type="button" class="add-another-collection-treat btn btn-outline-dark"
                            data-list-selector="#users-treat" disabled="true">Add Medications
                    </button>
                </ul>
            </div>
        </div>
        <br>
        <br>
        <div class="row">
            <div class="col-md-5">  {{ form_row(UploadForm.health_info) }}</div>
        </div>
        <div class="row">
            <div class="col-md-5">   {{ form_row(UploadForm.Medical_File) }}</div>

        </div>
        <div class="row">
            <div class="col-md-5">{{ form_row(UploadForm.save, {attr: {class: 'btn btn-success'} }) }}</div>
        </div>
    </div>
    {{ form_end(UploadForm) }}
    {% endblock %}

{% block javascripts %}
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script
            src="https://code.jquery.com/jquery-3.5.1.min.js"
            integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0="
            crossorigin="anonymous"></script>
    <script src="{{ asset('js/app.js') }}"></script>
    <script src="{{ asset('js/treat.js') }}"></script>
    <script src="{{ asset('js/oper.js') }}"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
    <script>



        $("#users-treatment").prop("disabled", true);
        var clicked = 0;

        $('#medical_files_IsAlcohloic').click(function () {
            $('#medical_files_qtealcohol')[this.checked ? "show" : "hide"]();
        });

        $('#medical_files_IsSmoking').click(function () {
            $('#medical_files_qte_smoking')[this.checked ? "show" : "hide"]();
        });

        $('input[type="file"]').on('change', function() {
            Object.values(this.files).forEach(function(file) {
                console.log(`Type: ${file.type}`);
                if (file.type == 'application/pdf') {
                    console.log('Huzzah!')
                }
                else {
                    alert("Error the file should be a PDF")
                    $('input[type="file"]').replaceWith(  $('input[type="file"]').val('').clone( true ) );
                }
            })
        })



    </script>





{% endblock %}

